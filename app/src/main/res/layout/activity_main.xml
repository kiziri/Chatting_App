<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:padding="20sp"
    android:background="#FFF06A">

    <TextView
        android:id="@+id/mainTitleTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="60sp"
        android:padding="10sp"
        android:text="Kiziri Talk" />

    <LinearLayout
        android:id="@+id/btnGroup"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/userLoginBtn1"
            android:onClick="mainPageCLick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#FFFF00"
            android:background="#000000"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="20sp"
            android:padding="10sp"
            android:text="로그인" />

        <Button
            android:id="@+id/userJoinBtn1"
            android:onClick="mainPageCLick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#FFFF00"
            android:background="#000000"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="30sp"
            android:padding="10sp"
            android:text="회원 가입" />

        <TextView
            android:id="@+id/copyrightTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#6C6C6C"
            android:layout_gravity="center"
            android:text="CopyRight kiziri's" />
    </LinearLayout>


</RelativeLayout>